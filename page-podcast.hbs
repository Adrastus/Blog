{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
<header class="site-header outer {{#if feature_image}}" style="background-image: url({{feature_image}}){{else}}no-cover{{/if}}">
    <div class="inner">
        <div class="site-header-content">
            <h1 class="podcast-title">{{title}}</h1>
            <p class="podcast-description">{{excerpt}}</p>
            <div class="podcast-subscribe-buttons">
                <a class="btn-podcast btn-podcast-itunes" href="https://itunes.apple.com/us/podcast/ghost/id1370992132">
                    <img src="{{asset "img/icon-itunes.png"}}" alt="iTunes Logo" rel="presentation">
                    <span>iTunes</span>
                </a>
                <a class="btn-podcast btn-podcast-googleplay" href="#">
                    <img src="{{asset "img/icon-googleplay.png"}}" alt="Google Play Logo" rel="presentation">
                    <span>Google Play</span>
                </a>
                <a class="btn-podcast btn-podcast-spotify" href="#">
                    <img src="{{asset "img/icon-spotify.png"}}" alt="Spotify Logo" rel="presentation">
                    <span>Spotify</span>
                </a>
                <a class="btn-podcast btn-podcast-rss" href="#">
                    <img src="{{asset "img/icon-rss.png"}}" alt="RSS Icon" rel="presentation">
                    <span>RSS</span>
                </a>
            </div>
        </div>
    </div>
</header>

<main id="site-main" class="site-main outer" role="main">
    <div class="inner">

        <div class="podcast-feed">
            {{#get "posts" filter="primary_tag:writing" include="authors,tags" limit="all"}}
            {{#foreach posts}}

                <article class="podcast-card no-image">
                    <a class="podcast-card-content-link" href="{{url}}">
                        <header class="podcast-card-header">
                            <h2 class="podcast-card-title">{{title}}</h2>
                        </header>
                        <div class="podcast-card-content">
                            <section class="podcast-card-excerpt">
                                <p>{{excerpt words="33"}}</p>
                            </section>
                            <ul class="author-list">
                            {{#foreach authors}}
                                <li class="author-list-item">

                                    <div class="author-name-tooltip">
                                        {{name}}
                                    </div>

                                    {{#if profile_image}}
                                        <div href="{{url}}" class="static-avatar"><img class="author-profile-image" src="{{profile_image}}" alt="{{name}}" /></div>
                                    {{else}}
                                        <div href="{{url}}" class="static-avatar author-profile-image">{{> "icons/avatar"}}</div>
                                    {{/if}}
                                </li>
                            {{/foreach}}
                            </ul>
                        </div>
                    </a>
                </article>

            {{/foreach}}
            {{/get}}
        </div>

        <footer class="podcast-lol">
            Oh, you've reached the end already. We should probably record some more episodes...
        </footer>

    </div>
</main>

{{/post}}

{{!-- The #contentFor helper here will send everything inside it up to the matching #block helper found in default.hbs --}}
{{#contentFor "scripts"}}
<script>
$(function() {
    var $postContent = $(".post-full-content");
    $postContent.fitVids();
});
</script>
{{/contentFor}}
