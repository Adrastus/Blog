{{!< default}}

<header class="site-header outer {{#if @blog.cover_image}}" style="background-image: url({{@blog.cover_image}}){{else}}no-cover{{/if}}">
    <div class="inner">
        <div class="site-header-content">
            <h1 class="site-title">
                {{#if @blog.logo}}
                    <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                {{else}}
                    {{@blog.title}}
                {{/if}}
            </h1>
            <h2 class="site-description">{{@blog.description}}</h2>
        </div>
    </div>
</header>

<main id="site-main" class="site-main outer" role="main">
    <div class="inner">

        <div class="site-section">
            <div class="post-feed highlight-feed-primary">
                {{#get "posts" filter="featured:true" include="authors,tags" limit="1"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
                {{/get}}
                <aside>
                    <div class="highlight-feed-primary-widget">
                        test
                    </div>
                    <div class="highlight-feed-primary-widget">
                        test
                    </div>
                </aside>
            </div>
            <div class="post-feed highlight-feed-secondary">
                {{#get "posts" filter="featured:true" include="authors,tags" limit="4"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
                {{/get}}
            </div>
        </div>

    </div>

    <section class="breakout-section">
        <div class="inner">
            CTA
        </div>
    </section>

    <div class="inner">

        <section class="site-section">
            <header class="site-section-header">
                <h2 class="site-section-title">Product Updates</h2>
                <a class="site-section-morelink" href="{{@blog.url}}/tag/new-things/">See more {{> "icons/arrow-right-small"}}</a>
            </header>
            <div class="post-feed">
                {{#get "posts" filter="tag:new-things+featured:false" include="authors,tags" limit="3"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
                {{/get}}
            </div>
        </section>

        <section class="site-section">
            <header class="site-section-header">
                <h2 class="site-section-title">Tutorials</h2>
                <a class="site-section-morelink" href="{{@blog.url}}/tag/tutorials/">See more {{> "icons/arrow-right-small"}}</a>
            </header>
            <div class="post-feed">
                {{#get "posts" filter="tag:tutorials+featured:false" include="authors,tags" limit="3"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
                {{/get}}
            </div>
        </section>

        {{#get "posts" filter="tag:careers" include="authors,tags" limit="3"  as |careers|}}
        {{#if careers}}
        <section class="site-section">
            <header class="site-section-header">
                <h2 class="site-section-title">Careers at Ghost</h2>
                <a class="site-section-morelink" href="{{@blog.url}}/tag/careers/">See more {{> "icons/arrow-right-small"}}</a>
            </header>
            <div class="post-feed">

                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}

            </div>
        </section>
        {{/if}}
        {{/get}}

        <section class="site-section">
            <header class="site-section-header">
                <h2 class="site-section-title">Writing Tips</h2>
                <a class="site-section-morelink" href="{{@blog.url}}/tag/writing/">See more {{> "icons/arrow-right-small"}}</a>
            </header>
            <div class="post-feed">
                {{#get "posts" filter="tag:writing+featured:false" include="authors,tags" limit="3"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
                {{/get}}
            </div>
        </section>


        {{!-- <div class="post-feed">
            {{#foreach posts}}

                {{> "post-card"}}

            {{/foreach}}
        </div> --}}

    </div>
</main>
